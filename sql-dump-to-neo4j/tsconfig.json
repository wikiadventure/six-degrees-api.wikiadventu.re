{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "ES2023",
      "dom",
      "dom.iterable"
    ],
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "strict": false,
    "allowJs": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true
  }
}