    "version": "0.2.0",
    
    "configurations": [
        {
            "cwd": "${workspaceFolder}/sql-dump-to-memgraph",
            "command": "npm run ts-node -- ${file}",
            "name": "Debug memgraph file",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "cwd": "${workspaceFolder}/sql-dump-to-arango",
            "command": "npm run ts-node -- ${file}",
            "name": "Debug arango file",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "cwd": "${workspaceFolder}/sql-dump-to-neo4j",
            "command": "npm run ts-node -- ${file}",
            "name": "Debug neo4j file",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Docker Node.js Launch",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "platform": "node",
            "node": {
                "remoteRoot": "/project"
            },
            "dockerServerReadyAction": {
                "pattern": "Debugger listening"
            }
        },
        {
            "name": "Debug rust-serverless",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/rust-serverless/target/debug/rust-serverless",
            "preLaunchTask": "build-rust-serverless",
            "cwd": "${workspaceFolder}/rust-serverless",
            "args": [],
            "sourceLanguages": ["rust"],
            "env": {
                "RUST_LOG": "info"
            }
        },
        {
            "name": "Debug sql-dump-to-rust",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/sql-dump-to-rust/target/debug/sql-dump-to-rust",
            "preLaunchTask": "build-sql-dump-to-rust",
            "cwd": "${workspaceFolder}/sql-dump-to-rust",
            "args": [],
            "sourceLanguages": ["rust"],
            "env": {
                "RUST_LOG": "info"
            }
        }
    ]
}